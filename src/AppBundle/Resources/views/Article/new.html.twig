{% extends "::base.html.twig" %}

{% block title %}
    {{ parent() ~ ' - New' }}
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="col-md-offset-3 col-md-6">
        {{ form_start(form) }}
            {{ form_errors(form) }}

            {{ form_row(form.title, { 'label': 'Titre' }) }}
            {{ form_row(form.content, { 'label': 'Description' }) }}
            {{ form_row(form.author, { 'label': 'Auteur' }) }}
            {{ form_row(form.tag, { 'label': 'tags' }) }}

            {{ form_row(form.save, { 'label': 'Submit me' }) }}
        {{ form_end(form) }}
    </div>
{% endblock %}